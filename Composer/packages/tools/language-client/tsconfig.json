{
  "compilerOptions": {
    "outDir": "./lib/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./",
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./__tests__/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
