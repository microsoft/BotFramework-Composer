{
  /* Options used for linting (tests included) */
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "__tests__/**/*.test.ts"
  ]
}
