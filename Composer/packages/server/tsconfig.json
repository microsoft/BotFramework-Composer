{
  "compilerOptions": {
      "baseUrl":".",
      "paths": { "*": ["types/*"] },
      "module": "commonjs",
      "target": "es6",
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "build",
      "strict": true,  
      "esModuleInterop": true
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.test.ts"
  ],
  "include": [
      "src/**/*.ts"
  ]
}