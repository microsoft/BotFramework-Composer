{
  "name": "@bfc/code-editor",
  "version": "0.0.0",
  "description": "Code editor component that is shared in composer packages",
  "main": "lib/index.js",
  "engines": {
    "node": "14.x"
  },
  "repository": "https://github.com/microsoft/BotFramework-Composer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn clean && yarn build:css && yarn build:ts",
    "build:ts": "tsc --build tsconfig.build.json",
    "build:css": "copyfiles --up 1 \"src/**/*.css\" \"src/**/*.scss\" lib",
    "clean": "rimraf lib demo/dist",
    "prepublishOnly": "npm run build",
    "start": "webpack-dev-server --config demo/webpack.config.demo.js",
    "build:demo": "webpack --config demo/webpack.config.demo.js",
    "test": "jest",
    "lint": "eslint --quiet ./src",
    "lint:fix": "yarn lint --fix",
    "lint:typecheck": "tsc --noEmit",
    "watch": "yarn build:ts --watch"
  },
  "peerDependencies": {
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "@bfc/indexers": "*",
    "@bfc/lg-languageserver": "*",
    "@bfc/shared": "*",
    "@bfc/ui-shared": "*",
    "@bfc/built-in-functions": "*"
  },
  "devDependencies": {
    "@bfc/indexers": "*",
    "@bfc/lg-languageserver": "*",
    "@bfc/shared": "*",
    "@botframework-composer/test-utils": "*",
    "@types/express": "^4.17.1",
    "@types/lodash": "^4.14.146",
    "@types/node": "^12.12.8",
    "@types/react-dom": "16.9.5",
    "@types/react": "16.9.23",
    "@types/vscode": "^1.40.0",
    "autoprefixer": "^9.5.1",
    "copyfiles": "^2.2.0",
    "css-loader": "^2.1.1",
    "express": "^4.17.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.6.0",
    "postcss-loader": "^3.0.0",
    "react-dom": "16.13.1",
    "react": "16.13.1",
    "rimraf": "^2.6.3",
    "style-loader": "^0.23.1",
    "ts-loader": "7.0.4",
    "url-loader": "^1.1.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-alignment": "^28.0.0",
    "@ckeditor/ckeditor5-build-classic": "^28.0.0",
    "@ckeditor/ckeditor5-image": "^28.0.0",
    "@ckeditor/ckeditor5-markdown-gfm": "^28.0.0",
    "@ckeditor/ckeditor5-react": "^3.0.2",
    "@ckeditor/ckeditor5-theme-lark": "^28.0.0",
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "@monaco-editor/react": "^3.8.3",
    "adaptivecards": "^2.7.0",
    "json-schema-defaults": "^0.4.0",
    "lodash": "^4.17.19",
    "monaco-editor": "^0.21.2",
    "monaco-languageclient": "^0.10.0",
    "normalize-url": "^4.5.1",
    "reconnecting-websocket": "^3.2.2",
    "vscode-ws-jsonrpc": "^0.1.1",
    "@uifabric/fluent-theme": "^7.1.4",
    "@fluentui/react-icons": "^0.3.9",
    "@wwalc/ckeditor5-emoji": "^11.0.2"
  }
}
