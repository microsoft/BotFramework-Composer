{
  "compilerOptions": {
    "outDir": "./lib/",
    "allowJs": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*",
    "./__tests__/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ],
}