{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["./src/**/*", "./__tests__/**/*"],
  "exclude": [
    "node_modules"
  ],
}
