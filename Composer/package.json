{
    "name": "composer-root",
    "private": true,
    "workspaces": [
        "packages/client",
        "packages/server",
        "packages/extensions",
        "packages/extensions/*",
        "packages/lib",
        "packages/lib/*"
    ],
    "scripts": {
        "client": "cd packages/client && yarn start",
        "server": "cd packages/server && yarn start",
        "build:extensions": "cd packages/extensions && yarn build:all",
        "start": "concurrently --kill-others-on-fail \"yarn client\" \"yarn server\"" 
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "packages/**/*.{ts,tsx,js,jsx}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "concurrently": "^4.1.0",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.0",
        "prettier": "^1.15.3"
    }
}