{
  "$schema": "../../Schemas/app.schema",
  "$type": "Microsoft.RuleDialog",
  "$id": "root",
  "storage": {
    "$type": "Microsoft.MemoryStorage"
  },
  "recognizer": {
    "$type": "Microsoft.RegexRecognizer",
    "rules": {
      "AddIntent": "(?:add|create) .*(?:to-do|todo|task)(?: )?(?:named (?<title>.*))?",
      "DeleteIntent": "(?:delete|remove|clear) .*(?:to-do|todo|task)(?: )?(?:named (?<title>.*))?",
      "ShowIntent": "(?:show|see|view) .*(?:to-do|todo|task)",
      "ClearIntent": "(?:delete|remove|clear) (?:all|every) (?:to-dos|todos|tasks)"
    }
  },
  "rules": [
    {
      "$type": "Microsoft.WelcomeRule",
      "steps": [
        {
          "$type": "Microsoft.SendActivity",
          "activity": "Hi! I'm a ToDo bot. Say \"add a todo named first one\" to get started."
        }
      ]
    },
    {
      "$type": "Microsoft.IntentRule",
      "intent": "AddIntent",
      "steps": [
        {
          "$type": "Microsoft.CallDialog",
          "dialog": {
            "$ref": "Samples/Planning - ToDoBot/AddToDo.dialog"
          }
        }
      ]
    },
    {
      "$type": "Microsoft.IntentRule",
      "intent": "DeleteIntent",
      "steps": [
        {
          "$type": "Microsoft.CallDialog",
          "dialog": {
            "$ref": "Samples/Planning - ToDoBot/DeleteToDo.dialog"
          }
        }
      ]
    },
    {
      "$type": "Microsoft.IntentRule",
      "intent": "ClearIntent",
      "steps": [
        {
          "$type": "Microsoft.CallDialog",
          "dialog": {
            "$ref": "Samples/Planning - ToDoBot/ClearToDos.dialog"
          }
        }
      ]
    },
    {
      "$type": "Microsoft.IntentRule",
      "intent": "ShowIntent",
      "steps": [
        {
          "$type": "Microsoft.CallDialog",
          "dialog": {
            "$ref": "Samples/Planning - ToDoBot/ShowToDos.dialog"
          }
        }
      ]
    }
  ]
}