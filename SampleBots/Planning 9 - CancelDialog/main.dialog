{
  "$schema": "https://raw.githubusercontent.com/Microsoft/botbuilder-tools/SchemaGen/packages/DialogSchema/src/dialogSchema.schema",
  "$type": "Microsoft.AdaptiveDialog",
  "recognizer": {
    "$type": "Microsoft.RegexRecognizer",
    "intents": {
      "JokeIntent": "(?i)joke"
    }
  },
  "rules": [
    {
      "$type": "Microsoft.EventRule",
      "events": [
        "cancelDialog"
      ],
      "steps": [
        {
          "$type": "Microsoft.SendActivity",
          "activity": "ok."
        }
      ]
    },
    {
      "$type": "Microsoft.IntentRule",
      "intent": "JokeIntent",
      "steps": [
        "TellJoke"
      ]
    },
    {
      "$type": "Microsoft.WelcomeRule",
      "steps": [
        {
          "$type": "Microsoft.SendActivity",
          "activity": "I'm a joke bot. To get started say \"joke\"."
        }
      ]
    },
    {
      "$type": "Microsoft.NoMatchRule",
      "steps": [
        {
          "$type": "Microsoft.IfCondition",
          "condition": "user.name == null",
          "ifTrue": [
            {
              "$type": "Microsoft.TextInput",
              "property": "user.name",
              "prompt": "Hello, I'm Zoidberg. What is your name?"
            }
          ]
        },
        {
          "$type": "Microsoft.SendActivity",
          "activity": "Hello {user.name}, nice to talk to you!"
        }
      ]
    }
  ]
}